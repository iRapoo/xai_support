<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppThemeNews" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/top_color</item>
        <item name="colorPrimaryDark">@color/top_color</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:windowTranslucentNavigation" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/top_color</item>
        <item name="colorPrimaryDark">@color/top_color</item>
    </style>

    <style name="Theme.Panel" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/top_color</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e51249d9</item>
        <item name="sv_showcaseColor">#25467A</item>
        <item name="sv_buttonText">@string/Welcom_skip</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#deffffff</item>
    </style>

    <style name="CustomText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#8affffff</item>
    </style>

    <!-- Темы оформлений -->
    <style name="blueTheme"> <!-- Стандартный стиль -->
        <item name="top_color">#1b557a</item>
        <item name="main_color">#20648f</item>
        <item name="extra_color">#2472a4</item>
    </style>

    <style name="pomegrangeTheme"> <!-- Гранатовый -->
        <item name="top_color">#962d22</item>
        <item name="main_color">#ab3326</item>
        <item name="extra_color">#c0392b</item>
    </style>

    <style name="greenSeaTheme"> <!-- Зеленое море -->
        <item name="top_color">#107360</item>
        <item name="main_color">#138a72</item>
        <item name="extra_color">#16a085</item>
    </style>

    <style name="pumpkinTheme"> <!-- Зеленое море -->
        <item name="top_color">#a04000</item>
        <item name="main_color">#ba4a00</item>
        <item name="extra_color">#d35400</item>
    </style>

    <style name="asbestosTheme"> <!-- Асбест -->
        <item name="top_color">#667273</item>
        <item name="main_color">#727f80</item>
        <item name="extra_color">#7f8c8d</item>
    </style>

    <style name="wisteriaTheme"> <!-- Глициния -->
        <item name="top_color">#703688</item>
        <item name="main_color">#7f3d9b</item>
        <item name="extra_color">#8e44ad</item>
    </style>

    <style name="orangeTheme"> <!-- Апельсиновый -->
        <item name="top_color">#c87f0a</item>
        <item name="main_color">#e08e0b</item>
        <item name="extra_color">#f39c12</item>
    </style>

    <style name="asphaltTheme"> <!-- Мокрый асфальт -->
        <item name="top_color">#22303d</item>
        <item name="main_color">#2b3c4e</item>
        <item name="extra_color">#34495e</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- ************ -->

</resources>
